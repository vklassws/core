// Use "npm run build" instead of tsc
{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"lib": [ "ES6" ],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"rootDir": "src",
		"outDir": "build",
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"build"
	]
}